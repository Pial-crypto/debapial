<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">






        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView

                android:adjustViewBounds="true"
android:src="@drawable/profile_picture_not_available"
                android:id="@+id/profileImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/black"

                app:shapeAppearanceOverlay="@style/circularImageViewShape" />




        </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Edit Profile"/>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/baseline_arrow_back_24"
        android:orientation="horizontal" />


    <TextView
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mimi Headline"
       android:background="#E3C7C7"


        android:textSize="17dp"/>






    <TextView
        android:id="@+id/Popular"
        android:layout_weight="1"
        android:drawableRight="@drawable/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular"
        android:textSize="20dp"/>


    <!-- Add a light border line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>

    <TextView
        android:id="@+id/Trading"
        android:layout_weight="1"
        android:drawableRight="@drawable/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trading"
        android:textSize="20dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>


    <TextView
        android:id="@+id/Today"
        android:layout_weight="1"
        android:drawableRight="@drawable/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="20dp"/>



    <TextView

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content"
        android:background="#E3C7C7"

        android:textSize="20dp"/>





    <TextView
        android:id="@+id/Fav"
        android:gravity="center_vertical"
android:drawableLeft="@drawable/heart"
        android:layout_weight="1"
        android:drawableRight="@drawable/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favourites"
        android:textSize="20dp"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>

    <TextView
        android:id="@+id/Download_Report"
       android:gravity="center_vertical"
android:drawableLeft="@drawable/download"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Report"
        android:drawableRight="@drawable/next"
        android:textSize="20dp"/>




    <TextView

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preferences"
        android:background="#E3C7C7"
        android:textSize="20dp"/>



    <TextView
        android:gravity="center_vertical"
        android:id="@+id/Language"
        android:drawableLeft="@drawable/language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_weight="1"
        android:drawableRight="@drawable/next"
        android:text="Language"
        android:textSize="20dp" />






    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>

<LinearLayout
android:orientation="horizontal"
android:layout_weight="1"
android:layout_width="match_parent"
android:layout_height="wrap_content">


    <TextView


        android:id="@+id/Dark"

        android:drawableLeft="@drawable/dark"
        android:gravity="center_vertical"

        android:drawableRight="@drawable/next"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Darkmode"
        android:textSize="20dp"/>



    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/darkModeSwitch"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>



</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>

    <TextView

       android:id="@+id/wifi"
        android:drawableLeft="@drawable/wifi"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:drawableRight="@drawable/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Via Wifi"
        android:textSize="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Logout"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"/>


</LinearLayout>

