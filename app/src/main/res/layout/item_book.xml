<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="50dp"
android:fitsSystemWindows="true"
    android:background="@color/lavender"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="4dp"
    android:orientation="horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:backgroundTint="@color/darkmode"
            />

    <LinearLayout
android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- Image on the right side -->
        <ImageView

            android:id="@+id/imageViewBookCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"

            android:src="@drawable/default_book_cover" /> <!-- Provide a default image if there's no cover -->

    <!-- Vertical layout for book details -->
    <LinearLayout
        android:background="#DABE90"
        android:padding="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!-- Book Name -->
        <TextView

            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"/>

        <TextView
            android:textColor="#FF1111"
            android:layout_weight="1"
            android:id="@+id/textViewBookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Name Value"/>

        <!-- Author Name -->
        <TextView

            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author:"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/textViewAuthorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#FF1111"
            android:text="Author Name Value"/>


        <!-- Genre (Add other TextViews, ImageViews, etc. for additional book details) -->
        <TextView


            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genre:"/>

        <TextView
            android:textColor="#FF1111"
            android:layout_weight="1"
            android:id="@+id/textViewGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GenreValue"/>

        <TextView


            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status:"/>

        <TextView

            android:textColor="#FF1111"
            android:layout_weight="1"
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StatusValue"/>


    </LinearLayout>

    </LinearLayout>


        <View
android:background="@color/darkmode"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>
