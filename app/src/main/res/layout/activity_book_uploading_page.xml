<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".book_uploading_page">

    <!-- Button to Select Book Cover Image -->
    <ImageView
       android:src="@drawable/uploadyourphoto"
android:layout_gravity="center"
        android:id="@+id/imageViewBookCover"
        android:layout_width="300dp"
        android:layout_height="200dp"
 />

    <Button
        android:layout_gravity="center"
        android:layout_weight="1"
        android:backgroundTint="@color/lavender"
        android:id="@+id/buttonSelectImage"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:text="Select Image" />

    <!-- Book Title -->
    <EditText

        android:layout_weight="1"
        android:id="@+id/editTextBookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Book Title"
        android:inputType="text" />

    <!-- Author's Name -->
    <EditText
        android:layout_weight="1"
        android:id="@+id/editTextAuthorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Author's Name"
        android:inputType="text" />

    <!-- Genre -->
    <EditText
        android:layout_weight="1"
        android:id="@+id/editTextGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Genre"
        android:inputType="text" />

    <!-- Checkbox for Exchange -->
    <CheckBox
        android:layout_gravity="center"
        android:id="@+id/checkBoxExchange"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Exchange"
        android:textSize="30dp"
        android:background="@color/darkmode"
        android:textColor="#03DA0E" />

    <!-- Checkbox for Sell -->
    <CheckBox

        android:background="#03DA0E"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:id="@+id/checkBoxSell"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sell" />

    <!-- Button to Upload Book -->
    <Button

        android:layout_weight="1"
        android:textColor="@color/black"
        android:backgroundTint="@color/lavender"
        android:id="@+id/buttonUploadBook"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Upload Book" />
</LinearLayout>