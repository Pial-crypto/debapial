<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_pressed="false" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color when not pressed -->
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Background color when pressed -->
        </shape>
    </item>
    <!-- Focused state (e.g., when using a keyboard) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Background color when focused -->
        </shape>
    </item>
</selector>
